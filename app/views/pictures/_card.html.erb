					<%= f.hidden_field :user_id, value: current_user.id %>
					<%= f.hidden_field :picture_id, value: pic.id %>

					<%= f.submit 'ğŸ’”ï¸' %>
				<% end %>
			<% else %>
			<!-- form to like picture -->
				<%= form_for @like, html: {style: "display:inline"} do |f| %>
					<%= f.hidden_field :user_id, value: current_user.id %>
					<%= f.hidden_field :picture_id, value: pic.id %>

					<%= f.submit 'â¤ï¸' %> 
				<% end %>
			<% end %>
			<% if current_user.id == pic.user.id %>
				<%= link_to "ğŸ—‘ï¸", picture_path(pic), method: "DELETE" %>
			<% end %>
		<!-- end like button logic -->

	    </span>
			<% if pic.comments.count == 1 %>
				<p><%= link_to "#{pic.comments.count} Comment", picture_path(pic) %></p>
			<% else %>
				<p><%= link_to "#{pic.comments.count} Comments", picture_path(pic) %></p>
			<% end %><br>
			<% if !pic.tags.empty? %>
				<% pic.tags.first(3).each do |tag| %>
					<%= "##{tag.name}" %>
				<% end %>
			<% end %>	
	  </div>
	</div>