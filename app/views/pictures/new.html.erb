<div align="center">
	<br><h3> Post a new picture! </h3><br>
</div>
<div class="login_margins">
	<div class="ui single column middle aligned very relaxed stackable grid">
	<%= form_for @picture do |f| %>
	  <div class="column">
	    <div class="ui form">
	      <div class="field">
	        <label>Picture URL</label>
	        <div class="ui left icon input">
	          <%= f.text_field :image_url, required: true %>
	        </div>
	      </div>
	      <div class="field">
	        <label>Title</label>
	        <div class="ui left icon input">
	          <%= f.text_field :title, required: true %>
	          <i class="lock icon"></i>
	        </div>
	      </div>
	      <div class="field">
	        <label>Select Some Tags!</label>
	        <div class="ui left icon input">
	          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
	        </div>
	      </div>
	      <div class="field">
	        <label>Or create your own tag:</label>
	        <%= f.fields_for :tag do |tag_form| %>
	        <div class="ui left icon input">     
				<%= tag_form.text_field :name, placeholder: nil %><br><br>
			  <% end %>
	        </div>
	      </div>
	      <div align="center">
	      	<%= f.submit class: "ui blue submit button" %>
	      </div>
	    </div>
	</div>
</div>
<% end %>