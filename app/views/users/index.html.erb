<fieldset>
<h1>Users</h1>

<% if @users.blank? %>
  	<h4>There are no users containing the term <%= params[:search] %>.</h4>
<% else %>
	<h4> Here are the results of your search for: <%= params[:search] %>. </h4>
<% end %>

<div>
	<% @users.each do |user| %>
		<li><%= link_to user.username, user_path(user) %></li>
		Pictures: <%= user.pictures.count %><br><br>
	<% end %>
</div>
</fieldset>